<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ls.www.petcommunity">

    <!--允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--获取GSM（2g）、WCDMA（联通3g）等网络状态的信息  -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!--获取sd卡写的权限，用于文件上传和下载-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--允许读取手机状态 用于创建BmobInstallation-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".MainApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SplashActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.TopicActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.UserHomeActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.LoginActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.PreviewActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.VerifyActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.AddNoteActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.AddTopicActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.AllArticlesActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.ArticleActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.EditActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.FocusListActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.FollowersListActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.HotNotesActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.LikeActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.MessageAlertActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.MessageFansActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.MessageNotesActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.MessageNotificationActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.MessageTopicsActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.MyCollectionActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.MyTopicActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.NoteActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.PopularActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.PopularTopicActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.SearchActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.UserMessageActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.HotTopicsActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.HotUsersActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.PicturePreviewActivity"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.example.yc.saying.fileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>


    </application>

</manifest>